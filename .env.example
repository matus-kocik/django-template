# Django settings
SECRET_KEY="your-new-secret-key"            # Secret key for the Django application
DEBUG=True                               # Enable debug mode (True for development, False for production)

# Allowed hosts
ALLOWED_HOSTS="localhost,127.0.0.1"        # Comma-separated list of allowed hosts

# Database: PostgreSQL settings (default)
DB_ENGINE=django.db.backends.postgresql     # Database engine (PostgreSQL)
DB_NAME=mydatabase                          # PostgreSQL database name
DB_USER=myuser                              # PostgreSQL username
DB_PASSWORD=mypassword                      # PostgreSQL password
DB_HOST=localhost                           # Host where PostgreSQL is running
DB_PORT=5432                                # PostgreSQL port (default 5432)

# Email settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend   # Email backend (e.g., SMTP, console)
EMAIL_HOST="smtp.example.com"            # SMTP server hostname
EMAIL_PORT=587                           # SMTP server port (e.g., 587 for TLS)
EMAIL_USE_TLS=True                       # Use TLS for secure connection
EMAIL_HOST_USER=your-email@example.com   # SMTP username (email address)
EMAIL_HOST_PASSWORD=your-email-password  # SMTP password

# Static and media files
STATIC_URL=/static/                      # URL prefix for static files
STATIC_ROOT=staticfiles/                 # Directory where static files are collected
MEDIA_URL=/media/                        # URL prefix for media files
MEDIA_ROOT=media/                        # Directory where media files are stored
